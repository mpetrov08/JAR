@model ConferenceFormModel

@{
    ViewBag.Title = "Edit Conference";
}

<h3>@ViewBag.Title</h3>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="LecturerId"></label>
                <input asp-for="LecturerId" class="form-control" placeholder="Lecturer" />
                <span asp-validation-for="LecturerId" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Topic"></label>
                <input asp-for="Topic" class="form-control" placeholder="Topic" />
                <span asp-validation-for="Topic" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Start"></label>
                <input asp-for="Start" class="form-control" placeholder="Start" />
                <span asp-validation-for="Start" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="End"></label>
                <input asp-for="End" class="form-control" placeholder="Required Language" />
                <span asp-validation-for="End" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConferenceUrl"></label>
                <input asp-for="ConferenceUrl" class="form-control" placeholder="Required Language" />
                <span asp-validation-for="ConferenceUrl" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
