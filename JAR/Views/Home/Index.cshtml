@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center">
    <img src="~/images/jar-logo.png" alt="JAR Logo" class="hero-logo">
    <h1 class="display-4 hero-title">Welcome to JAR</h1>
    <p class="hero-subtitle">
        Your global platform for <strong>Job</strong>, <strong>Arbeit</strong>, and <strong>Rabota</strong>.
    </p>
    <a class="btn btn-primary btn-lg hero-btn" asp-area="" asp-controller="CV" asp-action="Create">Create your own CV</a>
    <a class="btn btn-outline-light btn-lg hero-btn-secondary" asp-area="" asp-controller="JobOffer" asp-action="All">Find Jobs</a>
</div>

<div class="features-section text-center">
    <h2 class="features-title">Why Choose JAR?</h2>
    <div class="row">
        <div class="col-md-4 feature">
            <i class="fas fa-briefcase feature-icon"></i>
            <h3 class="feature-title">Job Opportunities</h3>
            <p class="feature-text">Find the best job offers tailored for you.</p>
        </div>
        <div class="col-md-4 feature">
            <i class="fas fa-globe feature-icon"></i>
            <h3 class="feature-title">Global Reach</h3>
            <p class="feature-text">Access jobs across multiple countries.</p>
        </div>
        <div class="col-md-4 feature">
            <i class="fas fa-user-tie feature-icon"></i>
            <h3 class="feature-title">Professional Guidance</h3>
            <p class="feature-text">Learn from experts and advance your career.</p>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/home/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
}