@{
    ViewBag.Title = "Error 401";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="text-center">
        <div class="mb-4">
            <span class="display-1 text-danger">&#128683;</span>
        </div>
        <h1 class="display-3 text-danger">401</h1>
        <h2 class="h4 text-muted">Unauthorized</h2>
        <p class="lead text-muted">Нямате право да видите тази страница. Моля, влезте първо.</p>
        <a href="/Account/Login" class="btn btn-danger btn-lg">Login</a>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f4f7f6;
        }

        .container {
            max-width: 600px;
        }

        .btn-danger {
            background-color: #FF6347;
            border-color: #FF6347;
        }

        .btn-danger:hover {
            background-color: #E55347;
            border-color: #E55347;
        }
    </style>
}