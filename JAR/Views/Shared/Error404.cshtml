@{
    ViewBag.Title = "Error 404";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="text-center">
        <div class="mb-4">
            <span class="display-1 text-danger">&#128531;</span>
        </div>
        <h1 class="display-3 text-danger">404</h1>
        <h2 class="h4 text-muted">Опа! Страницата не е намерена</h2>
        <p class="lead text-muted">Страницата, която търсите, не съществува или е преместена.</p>
        <a href="/" class="btn btn-danger btn-lg">Back to Home</a>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f4f7f6;
        }

        .container {
            max-width: 600px;
        }

        .btn-danger {
            background-color: #FF6347;
            border-color: #FF6347;
        }

        .btn-danger:hover {
            background-color: #E55347;
            border-color: #E55347;
        }
    </style>
}