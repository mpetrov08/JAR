@{
    ViewBag.Title = "Error 400";
}

<div class="container d-flex justify-content-center align-items-center">
    <div class="text-center">
        <div class="mb-4">
            <span class="display-1 text-warning">&#128533;</span>
        </div>
        <h1 class="display-3 text-warning">400</h1>
        <h2 class="h4 text-muted">Bad Request</h2>
        <p class="lead text-muted">Заявката не може да бъде разбрана от сървъра поради неправилен синтаксис.</p>
        <a href="/" class="btn btn-warning btn-lg">Back to Home</a>
    </div>
</div>

@section Styles {
    <style>
        body {
            background-color: #f4f7f6;
        }

        .container {
            max-width: 600px;
        }

        .btn-warning {
            background-color: #FFD700;
            border-color: #FFD700;
        }

        .btn-warning:hover {
            background-color: #FFCC00;
            border-color: #FFCC00;
        }
    </style>
}