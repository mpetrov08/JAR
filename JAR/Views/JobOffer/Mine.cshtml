@model List<JobOfferViewModel>

@{
    ViewBag.Title = "My Job Offers";
}

<h3 class="text-center">@ViewBag.Title</h3>
<hr />

@foreach (var jobOffer in Model)
{
    <div class="card">
        <h5 class="card-header">@jobOffer.Title</h5>

        <div class="card-body">
            <h5 class="card-title">@jobOffer.Address</h5>
            <h6>@jobOffer.Salary$</h6>
            <p class="card-text">
                @jobOffer.RequiredSkills

                @if (jobOffer.RequiredLanguage != string.Empty)
                {
                    @jobOffer.RequiredLanguage
                }

                @if (jobOffer.RequiredDegree != string.Empty)
                {
                    @jobOffer.RequiredDegree
                }

                @if (jobOffer.RequiredExperience != string.Empty)
                {
                    @jobOffer.RequiredDegree
                }
            </p>

            <p class="card-text">@jobOffer.CreatedOn</p>

            <div class="form-group col-md-3">
                <a class="btn btn-primary" asp-area="" asp-controller="JobOffer" asp-action="Details" asp-route-id="@jobOffer.Id">Details</a>
                <a class="btn btn-primary" asp-area="" asp-controller="JobOffer" asp-action="Edit" asp-route-id="@jobOffer.Id">Edit</a>
                <a class="btn btn-primary" asp-area="" asp-controller="JobOffer" asp-action="Delete" asp-route-id="@jobOffer.Id">Delete</a>
            </div>
        </div>
    </div>

    <br />
}