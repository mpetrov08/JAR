@model List<JobOfferApplicantViewModel>

@{
    ViewBag.Title = "View Job Applicants";
}

<h3>@ViewBag.Title</h3>
<hr />

@foreach (var applicant in Model)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@applicant.Email</h5>
            <h3>Is Approved: @applicant.IsApproved</h3>
            <p class="card-text">@applicant.AppliedOn</p>
        </div>

        <div class="form-group col-md-3">
            <a class="btn btn-primary" asp-area="" asp-controller="JobApplication" asp-action="Approve" asp-route-jobId="@applicant.JobId" asp-route-userId="@applicant.UserId">Approve</a>
        </div>
    </div>

    <br />
}
