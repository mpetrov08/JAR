@model JobApplicationStatusViewModel

@{
    ViewBag.Title = "Check Job Application Status";
}

<h3 class="text-center text-primary mb-5">@ViewBag.Title</h3>
<hr class="my-4" />

<div class="card shadow-sm border-0 rounded">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0">@Model.Title</h5>
    </div>

    <div class="card-body">
        <h5 class="card-title text-primary fw-bold"><i class="fas fa-map-marker-alt"></i> @Model.Address</h5>
        <h6 class="text-muted">@Html.Raw(Model.Description.RemoveHtmlXss())</h6>

        <hr class="my-3" />

        <p class="card-text">
            <strong><i class="fas fa-check-circle"></i> Status: </strong>
            <span class="badge @(Model.IsApproved ? "bg-success" : "bg-danger")">
                @(Model.IsApproved ? "Approved" : "Not Approved")
            </span>
        </p>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <p class="mt-3">
                <strong><i class="fas fa-comment-dots"></i> Message:</strong>
                <span class="text-secondary">@Model.Message</span>
            </p>
        }
    </div>

    <div class="card-footer text-center bg-light">
        <p class="text-muted small mb-0"><i class="fas fa-sync-alt"></i> Keep checking your application status for updates.</p>
    </div>
</div>