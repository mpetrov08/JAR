@model JobApplicationApproveViewModel

@{
    ViewBag.Title = "Approve Applicant";
}

<h3 class="text-center">@ViewBag.Title</h3>
<hr />

<form method="post">
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" disabled="disabled" />
    </div>

    <div class="form-group">
        <label asp-for="IsApproved" class="control-label"></label>
        <input asp-for="IsApproved" class="form-control" disabled="disabled" />
    </div>

    <div class="form-group">
        <label asp-for="AppliedOn" class="control-label"></label>
        <input asp-for="AppliedOn" class="form-control" disabled="disabled" />
    </div>

    <div class="form-group">
        <label asp-for="Message"></label>
        <input asp-for="Message" class="form-control" placeholder="Address" />
        <span asp-validation-for="Message" class="small text-danger"></span>
    </div>

    <div class="text-center">
        <input class="btn btn-primary mt-3" type="submit" value="Save" />
    </div>
</form>
