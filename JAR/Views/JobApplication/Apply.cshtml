@model JobOfferDetailsViewModel

@{
    ViewBag.Title = "Кандидатстване за работа";
}

<h3 class="text-center text-primary mb-5">@ViewBag.Title</h3>
<hr class="mb-4" />

<div class="container">
    <form method="post" class="shadow-lg p-4 rounded">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group mb-4">
                    <label asp-for="Title" class="form-label text-primary fw-bold">
                        <i class="fas fa-briefcase"></i> Заглавие на работа
                    </label>
                    <input asp-for="Title" class="form-control rounded" disabled="disabled" />
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Description" class="form-label text-primary fw-bold">
                        <i class="fas fa-file-alt"></i> Описание
                    </label>
                    <div class="form-control rounded" disabled="disabled" style="padding: 10px; border: 1px solid #ced4da;">
                        @Html.Raw(Model.Description.RemoveHtmlXss())
                    </div>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Address" class="form-label text-primary fw-bold">
                        <i class="fas fa-map-marker-alt"></i> Адрес
                    </label>
                    <input asp-for="Address" class="form-control rounded" disabled="disabled" />
                </div>

                @if (!string.IsNullOrEmpty(Model.RequiredLanguage))
                {
                    <div class="form-group mb-4">
                        <label asp-for="RequiredLanguage" class="form-label text-primary fw-bold">
                            <i class="fas fa-language"></i> Нужни езици
                        </label>
                        <input asp-for="RequiredLanguage" class="form-control rounded" disabled="disabled" />
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.RequiredDegree))
                {
                    <div class="form-group mb-4">
                        <label asp-for="RequiredDegree" class="form-label text-primary fw-bold">
                            <i class="fas fa-graduation-cap"></i> Нужно образование
                        </label>
                        <input asp-for="RequiredDegree" class="form-control rounded" disabled="disabled" />
                    </div>
                }
                @if (!string.IsNullOrEmpty(Model.RequiredExperience))
                {
                    <div class="form-group mb-4">
                        <label asp-for="RequiredExperience" class="form-label text-primary fw-bold">
                            <i class="fas fa-briefcase"></i> Нужен опит
                        </label>
                        <input asp-for="RequiredExperience" class="form-control rounded" disabled="disabled" />
                    </div>
                }

                <div class="form-group mb-4">
                    <label asp-for="RequiredSkills" class="form-label text-primary fw-bold">
                        <i class="fas fa-cogs"></i> Нужни умения
                    </label>
                    <textarea asp-for="RequiredSkills" class="form-control rounded" rows="3" disabled="disabled"></textarea>
                </div>

                <div class="text-center mt-5">
                    <input type="submit" value="Кандидатствай" class="btn btn-outline-primary btn-lg px-5 py-2" />
                </div>
            </div>
        </div>
    </form>
</div>