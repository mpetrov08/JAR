@model List<CompanyApproveViewModel>

@{
    ViewBag.Title = "Всички компании";
}

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th><i class="fas fa-building"></i> Име</th>
                        <th><i class="fas fa-id-card"></i> УИК(уникален индетификационен код)</th>
                        <th><i class="fas fa-globe"></i> Държава</th>
                        <th><i class="fas fa-map-marker-alt"></i> Адрес</th>
                        <th><i class="fas fa-phone"></i> Телефонен Номер</th>
                        <th><i class="fas fa-envelope"></i> Имейл</th>
                        <th><i class="fas fa-align-left"></i> Описание</th>
                        <th><i class="fas fa-user"></i> Име на собственика</th>
                        <th><i class="fas fa-circle"></i> Състояние</th>
                        <th><i class="fas fa-cogs"></i> Одобри компания</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model)
                    {
                        <tr class="text-center">
                            <td>@company.Name</td>
                            <td>@company.UIC</td>
                            <td>@company.Country</td>
                            <td>@company.Address</td>
                            <td>@company.PhoneNumber</td>
                            <td>@company.Email</td>
                            <td>@Html.Raw(company.Description.RemoveHtmlXss())</td>
                            <td>@company.OwnerName</td>
                            <td>
                                @if (company.IsDeleted)
                                {
                                    <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Изтрита</span>
                                }

                                else
                                {
                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> Активна</span>
                                }
                            </td>
                            <td>
                                @if (company.IsApproved)
                                {
                                    <form asp-area="" asp-controller="Company" asp-action="DisapproveCompany" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@company.Id" />
                                        <button type="submit" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-times-circle"></i> Неодобри
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-area="" asp-controller="Company" asp-action="ApproveCompany" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@company.Id" />
                                        <button type="submit" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-check-circle"></i> Одобри
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>