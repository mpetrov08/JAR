@model CompanyViewModel

@{
    ViewBag.Title = "Изтриване на компания";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">
                <i class="fas fa-trash-alt"></i> @ViewBag.Title
            </h2>
        </div>
        <div class="card-body">
            <h3 class="text-danger">
                <i class="fas fa-exclamation-triangle"></i> Сигурен ли си, че искаш да си изтриеш компанията?
            </h3>
            <div class="company-details mt-4">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong><i class="fas fa-building"></i> Име:</strong> @Model.Name
                    </li>
                    <li class="list-group-item">
                        <strong><i class="fas fa-map-marker-alt"></i> Адрес:</strong> @Model.Address
                    </li>
                    <li class="list-group-item">
                        <strong><i class="fas fa-phone"></i> Телефонен номер:</strong> @Model.PhoneNumber
                    </li>
                    <li class="list-group-item">
                        <strong><i class="fas fa-envelope"></i> Имейл:</strong> @Model.Email
                    </li>
                    <li class="list-group-item">
                        <strong><i class="fas fa-info-circle"></i> Описание:</strong> @Html.Raw(Model.Description.RemoveHtmlXss())
                    </li>
                    <li class="list-group-item">
                        <strong><i class="fas fa-user"></i> Име на собственика:</strong> @Model.OwnerName
                    </li>
                    <li class="list-group-item">
                        <strong><i class="fas fa-image"></i> Лого:</strong>
                        <div class="mt-2">
                            <img src="@Model.LogoUrl" alt="Company Logo" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                        </div>
                    </li>
                </ul>
            </div>
        </div>
        <div class="card-footer text-center">
            <form asp-action="Delete" method="post" class="d-inline">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg me-2">
                    <i class="fas fa-trash"></i> Изтрий
                </button>
            </form>
            <a asp-action="Index" asp-controller="Home" class="btn btn-secondary btn-lg">
                <i class="fas fa-times"></i> Върни се
            </a>
        </div>
    </div>
</div>