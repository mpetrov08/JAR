@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center my-4">@ViewData["Title"]</h1>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <section class="shadow p-4 rounded bg-light">
            <h2 class="text-center">Welcome Back!</h2>
            <p class="text-center text-muted">Please log in to your account</p>
            <hr />
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                <div class="form-floating mb-3 position-relative">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label"><i class="fas fa-envelope me-2"></i>Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3 position-relative">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Password" type="password" />
                    <label asp-for="Input.Password" class="form-label"><i class="fas fa-lock me-2"></i>Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" id="rememberMeCheck" />
                    <label class="form-check-label" for="rememberMeCheck">
                        Remember Me
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary mt-3">
                    <i class="fas fa-sign-in-alt me-2"></i>Log in
                </button>

                <div class="text-center mt-3">
                    <a asp-page="/Account/ForgotPassword" class="text-decoration-none">Forgot your password?</a>
                </div>

                <div class="text-center mt-3">
                    <a asp-page="/Account/Register" class="text-decoration-none">Don't have an account? Sign up!</a>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
