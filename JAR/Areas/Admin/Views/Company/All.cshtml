@model List<CompanyApproveViewModel>

@{
    ViewBag.Title = "All Companies";
}

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th>Company Name</th>
                        <th>UIC</th>
                        <th>Country</th>
                        <th>Address</th>
                        <th>Phone Number</th>
                        <th>Email</th>
                        <th>Description</th>
                        <th>Owner Name</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model)

                    {
                        <tr class="text-center">
                            <td>@company.Name</td>
                            <td>@company.UIC</td>
                            <td>@company.Country</td>
                            <td>@company.Address</td>
                            <td>@company.PhoneNumber</td>
                            <td>@company.Email</td>
                            <td>@Html.Raw(company.Description)</td>
                            <td>@company.OwnerName</td>
                            <td>
                                @if (company.IsDeleted)

                                {
                                    <span class="badge bg-danger">Deleted</span>
                                }

                                else

                                {
                                    <span class="badge bg-success">Active</span>
                                }
                            </td>
                            <td>
                                @if (company.IsApproved)

                                {
                                    <form asp-area="Admin" asp-controller="Company" asp-action="UnapproveCompany" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@company.Id" />
                                        <button type="submit" class="btn btn-outline-warning btn-sm">
                                            <i class="bi bi-x-circle-fill"></i> Unapprove
                                        </button>
                                    </form>
                                }

                                else

                                {
                                    <form asp-area="Admin" asp-controller="Company" asp-action="ApproveCompany" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@company.Id" />
                                        <button type="submit" class="btn btn-outline-success btn-sm">
                                            <i class="bi bi-check-circle-fill"></i> Approve
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" />
}
