@model List<CompanyApproveViewModel>

@{
    ViewBag.Title = "All Companies";
}

<div class="container my-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle">
                <thead class="table-light">
                    <tr class="text-center">
                        <th><i class="fas fa-building"></i> Company Name</th>
                        <th><i class="fas fa-id-card"></i> UIC</th>
                        <th><i class="fas fa-globe"></i> Country</th>
                        <th><i class="fas fa-map-marker-alt"></i> Address</th>
                        <th><i class="fas fa-phone"></i> Phone Number</th>
                        <th><i class="fas fa-envelope"></i> Email</th>
                        <th><i class="fas fa-align-left"></i> Description</th>
                        <th><i class="fas fa-user"></i> Owner Name</th>
                        <th><i class="fas fa-circle"></i> Status</th>
                        <th><i class="fas fa-cogs"></i> Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var company in Model)
                    {
                        <tr class="text-center">
                            <td>@company.Name</td>
                            <td>@company.UIC</td>
                            <td>@company.Country</td>
                            <td>@company.Address</td>
                            <td>@company.PhoneNumber</td>
                            <td>@company.Email</td>
                            <td>@Html.Raw(company.Description)</td>
                            <td>@company.OwnerName</td>
                            <td>
                                @if (company.IsDeleted)
                                {
                                    <span class="badge bg-danger"><i class="fas fa-times-circle"></i> Deleted</span>
                                }

                                else
                                {
                                    <span class="badge bg-success"><i class="fas fa-check-circle"></i> Active</span>
                                }
                            </td>
                            <td>
                                @if (company.IsApproved)
                                {
                                    <form asp-area="Admin" asp-controller="Company" asp-action="DisapproveCompany" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@company.Id" />
                                        <button type="submit" class="btn btn-outline-warning btn-sm">
                                            <i class="fas fa-times-circle"></i> Disapprove
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form asp-area="Admin" asp-controller="Company" asp-action="ApproveCompany" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@company.Id" />
                                        <button type="submit" class="btn btn-outline-success btn-sm">
                                            <i class="fas fa-check-circle"></i> Approve
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>