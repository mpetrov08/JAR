@model IEnumerable<UserViewModel> 
@inject UserManager<User> UserManager

@{ 
    ViewBag.Title = "All Users"; 
} 

<h2 class="text-center">@ViewBag.Title</h2> 
<hr /> 
<table class="table table-striped"> 
    <thead>
        <tr>
            <th><label>Email</label></th>
            <th><label>Full Name</label></th>
            <th>Role</th>
            <th>IsLecturer</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><label>@user.Email</label></td>
                <td><label>@user.FullName</label></td>
                @if (!await UserManager.IsInRoleAsync(await UserManager.FindByIdAsync(user.Id), "Administrator"))
                {
                    <td>
                        <form asp-area="Admin" asp-controller="User" asp-action="PromoteUserToAdmin" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-primary btn-lg">Promote to Admin</button>
                        </form>
                    </td>
                }
                else
                {
                    <td>
                        <form asp-area="Admin" asp-controller="User" asp-action="RemoveAdminRole" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-primary btn-lg">Remove Admin Role</button>
                        </form>
                    </td>
                }

                @if (!user.IsLecturer)
                {
                    <td>
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="User" asp-action="PromoteUserToLecturer" asp-route-id="@user.Id">Promote To Lecturer</a>
                    </td>
                }
                else
                {
                    <td>
                        <form asp-area="Admin" asp-controller="User" asp-action="DemoteFromLecturer" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-primary btn-lg">Remove From Lecturers</button>
                        </form>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>