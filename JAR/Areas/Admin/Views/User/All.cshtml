@model IEnumerable<UserViewModel>
@inject UserManager<User> UserManager

@{
    ViewBag.Title = "Всички потребители";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">@ViewBag.Title</h1>
        <p class="text-muted">Управлявайте потребителите на платформата и присвоявайте роли или привилегии с лекота.</p>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-primary text-center">
                <tr>
                    <th>Имейл</th>
                    <th>Име</th>
                    <th>Роля</th>
                    <th>Лектор ли е?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center">@user.Email</td>
                        <td class="text-center">@user.FullName</td>
                        <td class="text-center">
                            @if (await UserManager.IsInRoleAsync(await UserManager.FindByIdAsync(user.Id), "Administrator"))
                            {
                                <div class="d-flex justify-content-center">
                                    <span class="badge bg-success"><i class="fas fa-user-shield"></i> Администратор</span>
                                </div>

                                <form asp-area="Admin" asp-controller="User" asp-action="RemoveAdminRole" method="post" class="d-inline-block mt-2">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-ban"></i> Премахни администраторска роля</button>
                                </form>
                            }
                            else
                            {
                                <form asp-area="Admin" asp-controller="User" asp-action="PromoteUserToAdmin" method="post" class="d-inline-block mt-2">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-primary btn-sm"><i class="fas fa-user-plus"></i> Добави към администраторите</button>
                                </form>
                            }
                        </td>
                        <td class="text-center">
                            @if (user.IsLecturer)
                            {
                                <div class="d-flex justify-content-center">
                                    <span class="badge bg-info"><i class="fas fa-chalkboard-teacher"></i> Лектор</span>
                                </div>

                                <form asp-area="Admin" asp-controller="Lecturer" asp-action="DemoteFromLecturer" method="post" class="d-inline-block mt-2">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-warning btn-sm"><i class="fas fa-user-times"></i> Премахни от лектори</button>
                                </form>
                            }
                            else

                            {
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="Lecturer" asp-action="PromoteUserToLecturer" asp-route-id="@user.Id"><i class="fas fa-graduation-cap"></i> Добави към лектори</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/user/allUsers.css" />
}