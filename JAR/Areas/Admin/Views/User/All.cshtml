@model IEnumerable<UserViewModel>
@inject UserManager<User> UserManager

@{
    ViewBag.Title = "All Users";
}

<div class="container my-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">@ViewBag.Title</h1>
        <p class="text-muted">Manage platform users and assign roles or privileges with ease.</p>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-primary text-center">
                <tr>
                    <th>Email</th>
                    <th>Full Name</th>
                    <th>Role</th>
                    <th>Lecturer Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="text-center">@user.Email</td>
                        <td class="text-center">@user.FullName</td>
                        <td class="text-center">
                            @if (await UserManager.IsInRoleAsync(await UserManager.FindByIdAsync(user.Id), "Administrator"))
                            {
                                <div class="d-flex justify-content-center">
                                    <span class="badge bg-success">Administrator</span>
                                </div>

                                <form asp-area="Admin" asp-controller="User" asp-action="RemoveAdminRole" method="post" class="d-inline-block mt-2">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Remove Admin Role</button>
                                </form>
                            }
                            else
                            {
                                <form asp-area="Admin" asp-controller="User" asp-action="PromoteUserToAdmin" method="post" class="d-inline-block mt-2">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-primary btn-sm">Promote to Admin</button>
                                </form>
                            }
                        </td>
                        <td class="text-center">
                            @if (user.IsLecturer)
                            {
                                <div class="d-flex justify-content-center">
                                    <span class="badge bg-info">Lecturer</span>
                                </div>

                                <form asp-area="Admin" asp-controller="User" asp-action="DemoteFromLecturer" method="post" class="d-inline-block mt-2">
                                    <input type="hidden" name="id" value="@user.Id" />
                                    <button type="submit" class="btn btn-warning btn-sm">Remove from Lecturers</button>
                                </form>
                            }
                            else
                            {
                                <a class="btn btn-primary" asp-area="Admin" asp-controller="User" asp-action="PromoteUserToLecturer" asp-route-id="@user.Id">Promote To Lecturer</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/user/allUsers.css" />
}